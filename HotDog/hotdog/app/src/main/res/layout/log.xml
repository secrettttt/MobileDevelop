<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/log_tv_zhanghao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="账号:"
        android:textSize="20dp"
        android:gravity="center"

        app:layout_constraintRight_toLeftOf="@id/log_et_zhanghao"
        app:layout_constraintTop_toTopOf="@+id/log_et_zhanghao"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/log_et_zhanghao"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="账号"
        android:textColorHint="#95A1AA"
        android:layout_marginTop="120dp"
        android:scrollHorizontally="true"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/log_tv_mima"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="密码:"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/log_et_mima"
        app:layout_constraintTop_toTopOf="@+id/log_et_mima"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/log_et_mima"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="密码"
        android:textColorHint="#95A1AA"
        app:layout_constraintTop_toBottomOf="@id/log_tv_zhanghao"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:scrollHorizontally="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/log_login"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="登录"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/log_et_mima"
        />

    <Button
        android:id="@+id/log_register"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="注册"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/log_et_mima"
        />


</androidx.constraintlayout.widget.ConstraintLayout>