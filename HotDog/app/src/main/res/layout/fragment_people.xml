<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/people_tv_zh1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="账号:"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/people_tv_zh2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="未登录"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/people_tv_zh1"
        app:layout_constraintTop_toTopOf="@+id/people_tv_zh1"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/people_tv_mima1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="密码:"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/people_tv_zh1"
        app:layout_constraintTop_toBottomOf="@+id/people_tv_zh1"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/people_tv_mima2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="未登录"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/people_tv_mima1"
        app:layout_constraintTop_toTopOf="@+id/people_tv_mima1"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/img_shoucang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/collect"
        />
    <TextView
        android:id="@+id/tv_shoucang"
        android:layout_width="270dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf = "@+id/img_shoucang"
        app:layout_constraintTop_toTopOf= "@+id/img_shoucang"
        android:text="收藏"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:src="@drawable/right"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf = "@+id/tv_shoucang"
        app:layout_constraintTop_toTopOf= "@+id/tv_shoucang" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBEBE	"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_shoucang"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/img_dingyue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintTop_toBottomOf="@+id/img_shoucang"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/subscribe"
        />
    <TextView
        android:id="@+id/tv_dingyue"
        android:layout_width="270dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf = "@+id/img_dingyue"
        app:layout_constraintTop_toTopOf= "@+id/img_dingyue"
        android:text="订阅"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:src="@drawable/right"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf = "@+id/tv_dingyue"
        app:layout_constraintTop_toTopOf= "@+id/tv_dingyue" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBEBE	"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_dingyue"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/img_thumbsup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintTop_toBottomOf="@+id/img_dingyue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/like"
        />
    <TextView
        android:id="@+id/tv_thumbsup"
        android:layout_width="270dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf = "@+id/img_thumbsup"
        app:layout_constraintTop_toTopOf= "@+id/img_thumbsup"
        android:text="点赞"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:src="@drawable/right"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf = "@+id/tv_thumbsup"
        app:layout_constraintTop_toTopOf= "@+id/tv_thumbsup" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBEBE	"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_thumbsup"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintTop_toBottomOf="@+id/img_thumbsup"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/setting"
        />
    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="270dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf = "@+id/img_setting"
        app:layout_constraintTop_toTopOf= "@+id/img_setting"
        android:text="设置"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:src="@drawable/right"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf = "@+id/tv_setting"
        app:layout_constraintTop_toTopOf= "@+id/tv_setting" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBEBE	"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_setting"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/img_help"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintTop_toBottomOf="@+id/img_setting"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/help"
        />
    <TextView
        android:id="@+id/tv_help"
        android:layout_width="270dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf = "@+id/img_help"
        app:layout_constraintTop_toTopOf= "@+id/img_help"
        android:text="帮助"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:src="@drawable/right"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf = "@+id/tv_help"
        app:layout_constraintTop_toTopOf= "@+id/tv_help" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBEBE	"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_help"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="登录"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_tv_mima1"
        />
    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="登出"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_tv_mima1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>