<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_tv_zhanghao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="账号:"
        android:textSize="20dp"
        android:gravity="center"

        app:layout_constraintRight_toLeftOf="@id/register_et_zhanghao"
        app:layout_constraintTop_toTopOf="@+id/register_et_zhanghao"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/register_et_zhanghao"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:hint="账号"
        android:textColorHint="#95A1AA"
        android:layout_marginTop="20dp"
        android:scrollHorizontally="true"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/registertv_mima"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="密码:"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/register_et_mima"
        app:layout_constraintTop_toTopOf="@+id/register_et_mima"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/register_et_mima"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:hint="密码"
        android:textColorHint="#95A1AA"
        app:layout_constraintTop_toBottomOf="@id/register_tv_zhanghao"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:scrollHorizontally="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/registertv_confirm"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="确认密码:"
        android:textSize="20dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@id/register_et_confirm"
        app:layout_constraintTop_toTopOf="@+id/register_et_confirm"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/register_et_confirm"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:hint="确认密码"
        android:textColorHint="#95A1AA"
        app:layout_constraintTop_toBottomOf="@id/register_et_mima"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:scrollHorizontally="true"
        android:layout_marginTop="10dp"/>

