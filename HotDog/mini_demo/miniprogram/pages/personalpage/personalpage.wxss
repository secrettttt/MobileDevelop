/* miniprogram/pages/personalpage/personalpage.wxss */
@import "../footer/footer.wxss";
.container {
  position: absolute;
  text-align: center;
  left: 0;
  top: 0;
  width: 100%;
  padding: 0;
  margin: 0;
  height: 700rpx;
  display: block;
}

.userInfoContainer{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:left;
}

.logo{
  display: inline-block;
  position: relative;
  width: 135rpx;
  height: 135rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-bottom: 30rpx;
}

.userInfo{
  display: inline-block;
  position: relative;
  text-align: center;
  margin-left: 10rpx;
}

.username{
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  color: #666666;
  font-size: 35rpx;
}

.userid{
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  color: #666666;
  font-size: 35rpx;
}

.userformContainer{
  display: block;
  position: relative;
  text-align: center;
}

.itemContainer{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:left;
}

.itemlogo{
  display: inline-block;
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-bottom: 30rpx;
}

.itemtext{
  display: inline-block;
  font-size: 35rpx;
  color: #666666;
  margin-bottom: 7rpx;
}

.itemempty{
  display: inline-block;
  width: 45%;
  height: 10rpx;
}

.itemright{
  display: inline-block;
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-bottom: 30rpx;
}

.line{
  display: block;
  margin: 0 auto;
  width: 90%;
  height: 3rpx;
  background-color: #D8D8D8;
}


.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:left;
  background-color: #FFFFFF;
}

.footer-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:left;
  width: 25%;
}

.footer-logo{
  display: inline-block;
  position: relative;
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
}

.footer-text{
  display: inline-block;
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 10rpx;
}