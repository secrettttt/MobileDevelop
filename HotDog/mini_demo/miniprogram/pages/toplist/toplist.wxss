/* miniprogram/pages/personalsearch/personalsearch.wxss */

.container {
  position: absolute;
  text-align: center;
  left: 0;
  top: 0;
  width: 100%;
  padding: 0;
  margin: 0;
  height: 700rpx;
  display: block;
}

.topListTitleContainer{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:left;
  background-color: #FFFFFF;
}

.gotoLeft{
  display: inline-block;
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 60rpx;
  margin-bottom: 30rpx;
}

.topListTitle{
  display: inline-block;
  width: 60%;
  position: relative;
  text-align: center;
  margin-left: 10rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #7e7a7ad5;
}


.topListContainer{
  display: block;
  position: relative;
  text-align: center;
}

.itemContainer{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:left;
  text-align: left;
}

.itemTitle{
  display: inline-block;
  width:95%;
  height: 50rpx;
  font-size: 35rpx;
  color: #666666;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.line{
  display: block;
  margin: 0 auto;
  width: 90%;
  height: 3rpx;
  background-color: #D8D8D8;
}


.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:left;
  background-color: #FFFFFF;
}

.footer-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:left;
  width: 25%;
}

.footer-logo{
  display: inline-block;
  position: relative;
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
}

.footer-text{
  display: inline-block;
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.list-title{
  display: block;
  font-size: 30rpx;
  color: #666666;
  text-align:left;
  margin-bottom: 10rpx;
}
.list1{
  display: block;
  height: 100%;
  width: 100%;
  margin-bottom: 10rpx;
  justify-content:center;
}